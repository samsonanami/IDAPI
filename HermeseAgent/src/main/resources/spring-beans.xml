<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--MESSAGING CHANNEL HANDLER (MESSAGING QUEUE) RELATED BEANS-->

    <bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="failover:(tcp://10.101.15.212:61616)?timeout=3000"/>
        <property name="userName" value="admin"/>
        <property name="password" value="admin"/>
        <property name="trustAllPackages" value="true"/>
    </bean>

    <bean id="jmsContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="connectionFactory" />
        <property name="destinationName" value="idapi-process-queue" />
        <property name="messageListener" ref="messageAdapter" />
    </bean>

    <bean id="messageListener" class="com.fintech.orion.hermes.listener.HermesListener"/>
    <bean id="messageConsumer" class="com.fintech.orion.jobchanel.consumer.MessageConsumer">
        <property name="delegate" ref="messageListener"/>
    </bean>
    <bean id="messageAdapter" class="org.springframework.jms.listener.adapter.MessageListenerAdapter">
        <property name="delegate" ref="messageConsumer" />
        <property name="defaultListenerMethod" value="processMessage" />
    </bean>

    <bean id="orchestrator" class="com.fintech.orion.hermes.orchestrator.VerificationOrchestrator"/>
    <bean id="licenseHandler" class="com.fintech.orion.hermesagentservices.license.LicenseHandler"/>

    <bean id="oracleRequestProcessor" class="com.fintech.orion.hermesagentservices.processor.OracleRequestProcessor"/>


    <bean id="requestSubmitter" class="com.fintech.orion.hermesagentservices.transmission.request.submit.RequestSubmitter"/>

    <bean id="verificationRequestDetailService" class="com.fintech.orion.common.service.VerificationRequestDetailService"/>

    <bean id="hermeseResponseProcessor" class="com.fintech.orion.hermesagentservices.response.processor.HermeseResponseProcessor"/>

    <bean id="oracleAPIBaseUrl" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="http://10.101.15.212:8080/oracle/v1/"/>
    </bean>

    <bean id="maximumWaitingTimeInSeconds" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="120"/>
    </bean>

    <bean id="maximumNumberOfTimeShouldRetry" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="10"/>
    </bean>

    <bean id="dateDecoder" class="com.fintech.orion.documentverification.common.date.DateDecoder"/>
    <bean id="dateTypeConfigurationList" class="java.util.ArrayList">
        <constructor-arg>
            <array value-type="com.fintech.orion.documentverification.common.date.DateTypeConfiguration">
                <ref bean="ukPassportDateConfigurations"/>
                <ref bean="basicDateConfiguration"/>
            </array>
        </constructor-arg>
    </bean>

    <bean id="ukPassportDateConfigurations" class="com.fintech.orion.documentverification.common.date.DateTypeConfiguration">
        <property name="dateTypeRegex" value="^(\d{2}) (\w{3})(.*)(\d{2})$"/>
        <property name="strategy" ref="operationUKPassportDateDecode"/>
    </bean>

    <bean id="basicDateConfiguration" class="com.fintech.orion.documentverification.common.date.DateTypeConfiguration">
        <property name="dateTypeRegex" value="^(\d{2}.(\d{2}).(\d{4}))$"/>
        <property name="strategy" ref="operationSimplePassportDecode"/>
    </bean>

    <bean id="ukPassportMRZDateConfigurations" class="com.fintech.orion.documentverification.common.date.DateTypeConfiguration">
        <property name="dateTypeRegex" value="^\d{6}$"/>
        <property name="strategy" ref="operationUKPassportMRZDateDecode"/>
    </bean>

    <bean id="operationUKPassportDateDecode" class="com.fintech.orion.documentverification.common.date.strategy.UKPassportDateDecodeStrategy"/>
    <bean id="operationSimplePassportDecode" class="com.fintech.orion.documentverification.common.date.strategy.BasicDateDecodingStrategy">
        <property name="dateFormat" value="dd.MM.yyyy"/>
    </bean>
    <bean id="operationUKPassportMRZDateDecode" class="com.fintech.orion.documentverification.common.date.strategy.BasicDateDecodingStrategy">
        <property name="dateFormat" value="yyMMdd"/>
    </bean>
</beans>