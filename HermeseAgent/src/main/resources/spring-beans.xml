<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--MESSAGING CHANNEL HANDLER (MESSAGING QUEUE) RELATED BEANS-->

    <bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="failover:(tcp://10.101.15.212:61616)?timeout=3000"/>
        <property name="userName" value="admin"/>
        <property name="password" value="admin"/>
        <property name="trustAllPackages" value="true"/>
    </bean>

    <bean id="jmsContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="connectionFactory" />
        <property name="destinationName" value="idapi-process-queue" />
        <property name="messageListener" ref="messageAdapter" />
    </bean>

    <bean id="messageListener" class="com.fintech.orion.hermes.listener.HermesListener"/>
    <bean id="messageConsumer" class="com.fintech.orion.jobchanel.consumer.MessageConsumer">
        <property name="delegate" ref="messageListener"/>
    </bean>
    <bean id="messageAdapter" class="org.springframework.jms.listener.adapter.MessageListenerAdapter">
        <property name="delegate" ref="messageConsumer" />
        <property name="defaultListenerMethod" value="processMessage" />
    </bean>

    <bean id="orchestrator" class="com.fintech.orion.hermes.orchestrator.VerificationOrchestrator"/>

    <bean id="oracleRequestProcessor" class="com.fintech.orion.hermesagentservices.processor.OracleRequestProcessor"/>


    <bean id="requestSubmitter" class="com.fintech.orion.hermesagentservices.transmission.request.submit.RequestSubmitter"/>

    <bean id="verificationRequestDetailService" class="com.fintech.orion.common.service.VerificationRequestDetailService"/>

    <bean id="hermeseResponseProcessor" class="com.fintech.orion.hermesagentservices.response.processor.HermeseResponseProcessor"/>

    <bean id="oracleAPIBaseUrl" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="http://10.101.15.212:8080/oracle/v1/"/>
    </bean>

    <bean id="maximumWaitingTimeInSeconds" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="60"/>
    </bean>

    <bean id="maximumNumberOfTimeShouldRetry" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="10"/>
    </bean>

    <!--RESOURCES DIRECTORY PATH TO GET RESOURCES-->
    <bean id="resourcesDir" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="C:\\"/>
    </bean>

    <bean id="addressCompare" class="com.fintech.orion.documentverification.common.Address.AddressCompare"/>
    <bean id="addressDecoding" class="com.fintech.orion.documentverification.common.Address.AddressDecoding"/>

    <bean id="operationAddressComparator" class="com.fintech.orion.documentverification.strategy.OperationAddressComparator"/>
    <bean id="operationDateComparator" class="com.fintech.orion.documentverification.strategy.OperationDateComparator"/>
    <bean id="operationStringComparator" class="com.fintech.orion.documentverification.strategy.OperationStringComparator"/>

    <bean id="dataValidationStrategyProvider" class="com.fintech.orion.documentverification.strategy.DataValidationStrategyProvider"/>

    <bean id="documentVerificationFactory" class="com.fintech.orion.documentverification.factory.DocumentVerificationFactory"/>

    <bean id="dataComparator" class="com.fintech.orion.documentverification.factory.DataComparator"/>
    <bean id="idDocFullValidator" class="com.fintech.orion.documentverification.factory.IdentificationDocumentFullVerification"/>
    <bean id="addressDocFullValidator" class="com.fintech.orion.documentverification.factory.AddressDocumentFullVerification"/>

    <bean id="verificationConfigurationMap" class="java.util.HashMap" scope="prototype">
        <constructor-arg>
            <map key-type="java.lang.String" value-type="com.fintech.orion.dto.configuration.VerificationConfiguration">
                <entry key="surname" value-ref="surnameVC"/>
                <entry key="given_name" value-ref="givenNameVC"/>
                <entry key="date_of_birth" value-ref="dateOfBirthVC"/>
                <entry key="place_of_birth" value-ref="placeOfBirthVC"/>
                <entry key="family_name" value-ref="familyNameVC"/>
                <entry key="sex" value-ref="sexVC"/>
                <entry key="parents_given_name" value-ref="parentsGivenNameVC"/>
                <entry key="nationality" value-ref="nationalityVC"/>
                <entry key="address" value-ref="addressVC"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="surnameVC" class="com.fintech.orion.dto.configuration.VerificationConfiguration">
        <property name="sameValueComparisonStrategyAcrossMultipleResources" value="STRING" />
    </bean>
    <bean id="givenNameVC" class="com.fintech.orion.dto.configuration.VerificationConfiguration">
        <property name="sameValueComparisonStrategyAcrossMultipleResources" value="STRING"/>
    </bean>
    <bean id="dateOfBirthVC" class="com.fintech.orion.dto.configuration.VerificationConfiguration">
        <property name="sameValueComparisonStrategyAcrossMultipleResources" value="DATE"/>
    </bean>
    <bean id="placeOfBirthVC" class="com.fintech.orion.dto.configuration.VerificationConfiguration">
        <property name="sameValueComparisonStrategyAcrossMultipleResources" value="STRING"/>
    </bean>
    <bean id="familyNameVC" class="com.fintech.orion.dto.configuration.VerificationConfiguration">
        <property name="sameValueComparisonStrategyAcrossMultipleResources" value="STRING"/>
    </bean>
    <bean id="parentsGivenNameVC" class="com.fintech.orion.dto.configuration.VerificationConfiguration">
        <property name="sameValueComparisonStrategyAcrossMultipleResources" value="STRING"/>
    </bean>
    <bean id="sexVC" class="com.fintech.orion.dto.configuration.VerificationConfiguration">
        <property name="sameValueComparisonStrategyAcrossMultipleResources" value="STRING"/>
    </bean>

    <bean id="nationalityVC" class="com.fintech.orion.dto.configuration.VerificationConfiguration">
        <property name="sameValueComparisonStrategyAcrossMultipleResources" value="STRING"/>
    </bean>

    <bean id="addressVC" class="com.fintech.orion.dto.configuration.VerificationConfiguration">
        <property name="sameValueComparisonStrategyAcrossMultipleResources" value="ADDRESS"/>
    </bean>

    <bean id="passportMRZDecodingStrategy" class="com.fintech.orion.documentverification.common.mrz.PassportMRZDecodingStrategy"/>
    <bean id="drivingLicenseMRZDecodingStrategy" class="com.fintech.orion.documentverification.common.mrz.DrivingLicenseMZRDecodingStrategy"/>

    <bean id="passportCheckDigitFormation" class="com.fintech.orion.documentverification.common.checkdigit.PassportCheckDigitFormation"/>

    <bean id ="dateComparator" class="com.fintech.orion.documentverification.strategy.OperationDateComparator"/>
    <bean id="addressComparator" class="com.fintech.orion.documentverification.common.Address.AddressCompare"/>
    <bean id="addressDecoder" class="com.fintech.orion.documentverification.common.Address.AddressDecoding"/>


    <bean id="idDocCustomValidations" class="java.util.ArrayList">
        <constructor-arg>
            <array value-type="com.fintech.orion.documentverification.custom.CustomValidation">
                <ref bean="documentTypeValidation"/>
                <ref bean="documentVersionValidation"/>
                <ref bean="surNameValidation"/>
                <ref bean="genderVerification"/>
                <ref bean="minimumAgeVerification"/>
            </array>
        </constructor-arg>
    </bean>

    <bean id="addressDocCustomValidations" class="java.util.ArrayList">
        <constructor-arg>
            <array value-type="com.fintech.orion.documentverification.custom.CustomValidation">
                <ref bean="documentTypeValidation"/>
                <ref bean="surNameValidation"/>
                <ref bean="addressValidation"/>
            </array>
        </constructor-arg>
    </bean>


    <bean id="documentTypeValidation" class="com.fintech.orion.documentverification.custom.common.DocumentTypeValidation">
        <property name="criticalValidation" value="false"/>
        <property name="failedRemarksMessage" value="Document type verification failed"/>
        <property name="successRemarksMessage" value="Documet type verification success"/>
    </bean>
    <bean id="documentVersionValidation" class="com.fintech.orion.documentverification.custom.common.DocumentVersionValidation">
        <property name="criticalValidation" value="false"/>
        <property name="failedRemarksMessage" value="Document version verification failed"/>
        <property name="successRemarksMessage" value="Document version verification success"/>
    </bean>
    <bean id="surNameValidation" class="com.fintech.orion.documentverification.custom.common.SimpleStringFieldValidator">
        <property name="criticalValidation" value="true"/>
        <property name="ocrExtractionFieldName" value="surname"/>
        <property name="failedRemarksMessage" value="Surname not matching "/>
        <property name="successRemarksMessage" value="Surname match"/>
        <property name="verificationDisplayName" value="Surname Verification"/>
    </bean>
    
    <bean id="addressValidation" class="com.fintech.orion.documentverification.custom.common.AddressValidation">
        <property name="successRemarksMessage" value="Address matching"/>
        <property name="failedRemarksMessage" value="Address not matching"/>
        <property name="ocrExtractionFieldName" value="address"/>
        <property name="criticalValidation" value="false"/>
    </bean>

    <bean id="minimumAgeVerification" class="com.fintech.orion.documentverification.custom.common.MinimumAgeValidation">
        <property name="criticalValidation" value="false"/>
        <property name="ocrExtractionFieldName" value="date_of_birth"/>
        <property name="minimumAge" value="18"/>
        <property name="failedRemarksMessage" value="Customer is under 18 years old"/>
        <property name="successRemarksMessage" value="Customer is over 18 years"/>
    </bean>
    <bean id="genderVerification" class="com.fintech.orion.documentverification.custom.common.GenderValidation">
        <property name="criticalValidation" value="false"/>
        <property name="ocrExtractionFieldName" value="sex"/>
        <property name="successRemarksMessage" value="Customer is "/>
        <property name="failedRemarksMessage" value="Mismatching gender over multiple documents"/>
    </bean>
</beans>